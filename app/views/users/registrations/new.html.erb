<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :"(名)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :"(姓カナ)" %>
    <%= f.text_field :last_furigana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :"(名カナ)" %>
    <%= f.text_field :first_furigana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control"%>
  </div>

  <div  class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
